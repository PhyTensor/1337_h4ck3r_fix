## Caching Github Credentials ("default timeout is 15 minutes")

	git config --global credential.helper cache
	
	# Setting caching time to 3600 secs = 1 hour.
		
		git config --global credential.helper "cache --timeout=3600"


## Adding git commit email address

	git config --global user.email "example@123.com"
	
	# confirm git commit email
		
		git config --global user.email


## Adding git username. Different from github username

	git config --global user.name "name"
	
	# confirm git username
		
		git config --global user.name



## Contributing
	
	# fork the repo
	
	# clone the repo
	
	# create a branch
	
		git checkout -b [new-repo-branch]
	
	# make necessary changes and commit those changes
	
	# push the changes to github
	
	# submit your changes for review
	
		- Compare & Pull Request. Open a pull request
		- submit the pull request


# look where origin of folder is
	git remote -v

# add upstream
	git remote add upstream <original_repo_url>

# work on branches
	git branch fixissue<issue_number>branch
	git branch fixissue2822branch

	git checkout fixissue2822branch

# Create new branch
	git branch <new-branch-name>

# Delete a branch
	git branch -d <branch-name>

# Commit history
	git log

	git checkout <commit-hash>

# Merge changes from different branches
	git merge <branch-name>


